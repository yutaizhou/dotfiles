[user]
	useConfigOnly = true

[alias]
	ali = config --get-regexp alias

	a = add
	ap = add --patch

	br = branch -vv
	brd = branch -d

	ci = commit -v
	cia = commit -va
	cim = commit -m
	ciam = commit -ma
	amd = commit -v --amend
	amdn = commit --amend --no-edit

	cfg = config

	co = checkout
	cob = checkout -b

	d = diff # compares working directory with staging area
	dc = diff --cached # compares staging area with previous snapshot
	ds = diff --stat
	dcs = diff --cached --stat

	graph = log --all --decorate --graph --oneline

	rb = rebase
	rbi = rebase -i

	dis = restore
	disp = restore -p
	us = restore --staged
	usp = restore --staged -p

	rem = remote

	root = rev-parse --show-toplevel

	sm = submodule
	smpush = push --recurse-submodules=on-demand
	smpull = pull --recurse-submodules
	smd = submodule foreach 'git diff'
	smdc = submodule foreach 'git diff --cached'

	sw = switch
	swc = switch -c

	st = status -sb

[core]
	editor=vim
	excludesfile = ~/.gitignore_global

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
	path = ~/.gitconfig_local
